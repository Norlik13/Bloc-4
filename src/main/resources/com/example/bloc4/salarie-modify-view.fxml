<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bloc4.controller.ModifySalarieController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Prenom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="prenomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Telephone Fixe:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="telephoneFixeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Telephone Portable:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="telephonePortableField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="Department:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ComboBox fx:id="serviceComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Label text="Site:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <ComboBox fx:id="siteComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Button text="Save" onAction="#handleSave" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
</GridPane>